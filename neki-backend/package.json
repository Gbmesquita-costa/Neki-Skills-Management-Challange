{
  "name": "neki-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "run-s services:up && ts-node-dev --exit-child --transpile-only --ignore-watch node_modules --respawn -r tsconfig-paths/register ./src/server.ts",
    "start": "node build/server.js",
    "build": "tsup src --out-dir build",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "test:create-prisma-environment": "npm link ./prisma/vitest-environment-prisma",
    "test:install-prisma-environment": "npm link vitest-environment-prisma",
    "test": "vitest run --dir tests/unitaires",
    "test:watch": "vitest --dir tests/unitaires",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:e2e": "vitest run --dir ./tests/E2E",
    "test:e2e:watch": "vitest --dir ./tests/E2E",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "5.16.1",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "bcrypt": "5.1.1",
    "cookie-parser": "1.4.6",
    "cors": "^2.8.5",
    "dayjs": "1.11.11",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "express-async-errors": "3.1.1",
    "express-rate-limit": "7.3.1",
    "helmet": "7.1.0",
    "jsonwebtoken": "9.0.2",
    "multer": "1.4.5-lts.1",
    "prettier": "3.3.2",
    "reflect-metadata": "0.2.2",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "4.2.0",
    "tsup": "8.1.0",
    "tsyringe": "4.8.0",
    "typescript": "5.5.3",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/cookie-parser": "1.4.7",
    "@types/jsonwebtoken": "9.0.6",
    "@types/multer": "1.4.11",
    "@types/node": "20.14.9",
    "@types/supertest": "6.0.2",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "4.1.6",
    "@vitest/coverage-v8": "1.6.0",
    "@vitest/ui": "1.6.0",
    "npm-run-all": "4.1.5",
    "prisma": "5.16.1",
    "supertest": "7.0.0",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.6.0"
  }
}
